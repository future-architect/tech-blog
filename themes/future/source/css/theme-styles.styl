  .pre-header .list-inline li {
    margin-bottom: 2px;
  }
  .page-header-fixed .pre-header {
    opacity: 0;
  }
}
@media (max-width: 767px){
  .pre-header .pull-right {
      float: right !important;
  }
}

/* Menu tweak */
