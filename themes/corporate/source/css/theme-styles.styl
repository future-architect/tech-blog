  background: url('/metronic/assets/pages/img/frontend-slider/bg4.jpg') no-repeat center;
}

/* Pseudo-element used to push text to center */
.row-corporate-text-container:before {
  content: '';
  display: inline-block;
  height: 100%;
  vertical-align: middle;
  margin-right: -0.25em;
}

.row-corporate-text {
  display: inline-block;
  vertical-align: middle;
  width: 99%;
}

