}

/* iframely */
.iframely-embed {
  margin-bottom: 25px;
}

/* タブレットで発生する右側の余白を削除 */
.wrap {
  overflow: hidden;
}

.blog-info ul {
  padding-inline-start: 10px;
}

#footnotelist li {
  padding-top: 1em;
}
.toc-section {
  padding: 50px 0px 0px 0px;
}
.toc-section ol {
  padding: 0 0 0 0.8em;
}
.toc-section li {
  list-style-type: none;
  margin: 4px 0;
}
.toc-section a {
  list-style-type: none;
  margin: 4px 0;
  display: block;
  padding: 4px 8px;
  color: #333;
  text-decoration: none;
  line-height: 1;
}
.toc-section a:hover {
  background-color: #efefef;
  color: #85837a;
}
