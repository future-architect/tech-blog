}
.article-list .date {
  padding-right: 10px;
  color: #999;
  font-weight: bold;
}
.article-list .count {
  padding-right: 5px;
  color: #999;
  font-weight: bold;
  display: inline-block;
  min-width: 50px;
  max-width: 50px;
}
.article-list .title {
  text-decoration: none;
  color: #1a75ff;
  font-size: 1.3em;
}
